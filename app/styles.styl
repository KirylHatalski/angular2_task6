@import "../node_modules/animate.css/animate.min.css";
// @import "../node_modules/normalize.css/normalize.css";

body
html
  height: 100%
  margin: 0
  padding: 0

body
  background: #dddddd


.map
  width: 100%
  height: 100%
  position: fixed !important
  top: 0

.current-location
  display: block
  position: absolute
  top: 5%
  left: 10%
  z-index: 1

.table-main
  min-height: 56px
  width: 666px
  display: block
  color: #fff
  margin: 0 auto
  position: relative
  z-index: 1
  padding: 0 30px
  background: rgba(0,0,0,0.6)
  transition: height 300ms ease

.table-toggler
  text-align: justify
  position: relative

  &:after
    display: inline-block
    content: ''
    width: 100%


.table-info
.table-label
  display: inline-block

.table-info
  max-width: 70%
  text-align: left

.add-item
  position: absolute
  right: 0px
  top: 30px
  border: none
  outline: none
  background: transparent
  color: #fff
  font-size: 1em
  cursor: pointer
  height: 30px
  border-radius: 4px
  width: 160px
  &:hover
    background: rgba(255, 153, 0, 0.35)

.table-label
  background: rgba(255, 153, 0, 0.65)
  border-radius: 5px
  height: 30px
  width: 150px
  padding: 5px
  line-height: 30px
  cursor: pointer

  &.active
    &:after
      background: rgba(0, 255, 0, 0.65)
  span
    vertical-align: middle

  &:after
    content: ""
    display: inline-block
    border-radius: 50%
    vertical-align: middle
    width: 30px
    height: 30px
    background: rgba(255, 0, 0, 0.65)

#table-id
  display: none

.clickable
  cursor: pointer

.invisible
  visibility: hidden

.central
  position: fixed
  top: 50%
  left: 50%
  transform: translateX(-50%) translateY(-50%)
  color: #fff
  word-spacing: 4px

.table-content
  width: 100%
  text-align: center
  vertical-align: middle

  tablerow
    display: table-row
    vertical-align: middle
    border-color: inherit

    &:first-child
      text-align: left

  .favorite
    color: rgb(254, 236, 0)
    width: 32px
    &.unfav
      color: rgba(0,0,0,0.6)
    i
      cursor: pointer
      font-style: normal
      font-size: 30px;

  td:first-child
    text-align: left
  .options
    color: #fff
    cursor: pointer
    padding-right: 5px
  .active
    color: rgb(66, 0, 255)
  .compass
    position: relative
    .nord
      font-size: 10px
      color: #1706ff
      right: 50%
      top: 0
      transform: translateX(50%)
    .power
      color: rgba(245, 245, 245, 0.67)
      strong
        font-size: 1.8em
    &>div
      position: absolute
      transform: translateY(-50%)
    .direction
      color: #f00;
      font-size: 45px;
      position: absolute;
      top: 0px;
      left: -9px;
